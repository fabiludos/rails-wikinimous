<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<% @articles.each do |item| %>
  <p><%= link_to item.title, article_path(item) %></p>
  <p><%= link_to 'delete', article_path(item),
            method: :delete,
            data: { confirm: "Are you sure?" }  %></p>
<% end %>

<p><%= link_to 'create new', new_article_path %></p>

